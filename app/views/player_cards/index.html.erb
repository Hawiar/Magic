<p id="notice"><%= notice %></p>

<h1>Listing Player Cards</h1>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Card</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player_cards.each do |player_card| %>
      <tr>
        <td><%= player_card.player_id %></td>
        <td><%= player_card.card_id %></td>
        <td>
	  <div class="btn-group" role="group" aria-label="...">
            <button type = "button" class="btn btn-info">
              <%= link_to 'Show', player_card %>
            </button>
            <button type = "button" class="btn btn-default">
              <%= link_to 'Edit', edit_player_card_path(player_card) %>
            </button>
            <button type = "button" class="btn btn-danger">
              <%= link_to 'Delete', player_card, method: :delete, data: { confirm: 'Are you sure?' }  %>
            </button>
          </div>
       </td> 
     </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player card', new_player_card_path %>
