<p id="notice"><%= notice %></p>

<h1>Magic Cards</h1>

<%= will_paginate @cards %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.name %></td>
     	<td>
	  <div class="btn-group" role="group" aria-label="...">
	    <button type = "button" class="btn btn-default">
	      <%= link_to 'Show', card %>
	    </button>
          </div>
	</td>
	<td>
          <div class="btn-group" role="group" aria-label="...">
            <button type = "button" class="btn btn-default">
              <%= link_to 'Edit', edit_card_path(card) %>
            </button>
          </div>
        </td>
        <td>
          <div class="btn-group" role="group" aria-label="...">
            <button type = "button" class="btn btn-danger">
              <%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' }  %>
            </button>
          </div>
        </td>
       </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Card', new_card_path %>
